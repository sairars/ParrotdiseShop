@{
    ViewData["Title"] = "User Accounts";
}

<div class="container">
    <div class="row my-5">
        <div class="col-6">
            <h2 class="text-primary">@ViewData["Title"]</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary text-uppercase px-3"><i class="bi bi-plus-circle pe-2"></i>Register New Staff Member</a>
        </div>
    </div>
    <table class="table table-striped table-bordered" id="Users">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Role</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

<partial name="_Notification">

    @section Scripts {
        <script src="~/js/users/users.js"></script>
    }
