@model CategoryFormViewModel

@{
    ViewData["Title"] = Model.Heading;
}
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">
                    @Model.Heading Category
                </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" asp-action="Save" class="row">
            @if (Model.IsEdit)
            {
                <input hidden asp-for="CategoryDto.Id" />
            }
            else
            {
                <input hidden asp-for="CategoryDto.Id" value="0" />
            }
            <div class="border p-3">
                <div class="form-floating py-2 col-12">
                    <input asp-for="CategoryDto.Name" class="form-control"  />
                    <label asp-for="CategoryDto.Name" class="ms-2">Name</label>
                    <span asp-validation-for="CategoryDto.Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="CategoryDto.DisplayOrder" class="form-control"/>
                    <label asp-for="CategoryDto.DisplayOrder" class="ms-2">Display Order</label>
                    <span asp-validation-for="CategoryDto.DisplayOrder" class="text-danger"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        @if (Model.IsEdit)
                        {
                            <button type="submit" class="btn btn-primary form-control">Update</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-primary form-control">Create</button>
                        }

                    </div>
                    <div class="col-6 col-md-3">
                        <a class="btn btn-secondary border form-control" asp-controller="Categories" asp-action="Index">Go Back</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}