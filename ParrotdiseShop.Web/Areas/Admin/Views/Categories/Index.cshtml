@{
    ViewData["Title"] = "Categories";
}

<div class="container">
    <div class="row my-5">
        <div class="col-6">
            <h2 class="text-primary">@ViewData["Title"]</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Categories" asp-action="New" class="btn btn-primary text-uppercase px-3"><i class="bi bi-plus-circle pe-2"></i> New Category</a>
        </div>
    </div>
    <table class="table table-striped table-bordered" id="Categories">
        <thead>
            <tr>
                <th class="w-50">Name</th>
                <th class="w-50">Display Order</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

<partial name="_Notification">

@section Scripts {
    <script src="~/js/categories/categories.js"></script>
}