@{
    ViewData["Title"] = "Products";
}

<div class="container">
    <div class="row my-5">
        <div class="col-6">
            <h2 class="text-primary">Products</h2>
        </div>
        <div class="col-6 text-end"><a asp-controller="Products" asp-action="New" class="btn btn-primary text-uppercase px-3"><i class="bi bi-plus-circle pe-2"></i> New Product</a></div>
    </div>
    <table class="table table-striped table-bordered" id="Products">
        <thead>
            <tr>
                <th>Name</th>
                <th>SKU</th>
                <th>Unit Price</th>
                <th>Units In Stock</th>
                <th>Category</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

<partial name="_Notification">

    @section Scripts {
        <script src="~/js/products/products.js"></script>
    }
