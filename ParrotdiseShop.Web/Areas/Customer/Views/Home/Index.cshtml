@model ProductsViewModel

@{
    ViewData["Title"] = "Home";
}
<div class="row my-4">
    <div class="col-md-12 text-center">
        <ul class="list-group list-group-horizontal center-pills">
            <li class="list-group-item d-flex justify-content-between align-items-center px-5 border-0 btn btn-sm" data-category-id="0">
                <a class="fw-semibold text-uppercase" asp-controller="Home" asp-action="Index" asp-route-id="0">
                    All
                </a>
            </li>
            
            @foreach (var category in Model.CategoryDtos)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center px-5 border-0 btn btn-sm" data-category-id="@category.Id">
                    <a class="fw-semibold text-uppercase" asp-controller="Home" asp-action="Index" asp-route-id="@category.Id">
                        @category.Name
                    </a>
                </li>
            }
        </ul>
    </div>
</div>

<div class="row">
    @foreach (var product in Model.ProductDtos)
    {
        var inStock = (product.UnitsInStock >= 1);

        <div class="col-lg-3 col-sm-6">
            <div class="row">
                <div class="col-12">
                    <div class="card border-0 p-3">
                        <div class="border">
                            <img src="@product.ImagePath" class="card-img-top">
                        </div>
                        <div class="card-body text-center">
                            <p class="card-title my-3">@product.Name</p>
                            <p class="card-title">@(inStock? "In Stock" : "Out Of Stock")</p>

                            @if (inStock)
                            {
                                <a asp-controller="Home" asp-action="Details" asp-route-id="@product.Id" class="stretched-link btn bg-primary-subtle rounded-pill text-center text-black fw-semibold">@product.UnitPrice.ToString("c")</a>
                            }
                            else
                            {
                                <a class="disabled stretched-link btn bg-primary-subtle rounded-pill text-center text-black fw-semibold border-0">@product.UnitPrice.ToString("c")</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


@section Scripts {
    <script>

        $(document).ready(function () {

            let href = $(location).attr("href");

            let url = new URL(href);

            let selectedCategoryId = url.pathname.slice(-1);

            $('.list-group-item').each(function () {
                $(this).removeClass("active");

                let thisCategoryId = $(this).attr('data-category-id');

                if ((thisCategoryId == "0" && selectedCategoryId == "/") || thisCategoryId == selectedCategoryId) {
                    $(this).addClass("active");
                }
            });
        });
    </script>
}                              