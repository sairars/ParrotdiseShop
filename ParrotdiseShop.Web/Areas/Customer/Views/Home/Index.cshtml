@model ProductsViewModel

@{
    ViewData["Title"] = "Home";
}
<div class="row my-5">
    <div class="col-md-12 text-center">
        <ul class="list-group list-group-horizontal center-pills">
            <a class="category-links" asp-controller="Home" asp-action="Index" asp-route-id="0">
                <li class="list-group-item d-flex justify-content-between align-items-center px-5 border-0"
                    data-category-id="0">
                    All
                </li>
            </a>

            @foreach (var category in Model.CategoryDtos)
            {
                <a class="category-links" asp-controller="Home" asp-action="Index" asp-route-id="@category.Id">
                    <li class="list-group-item d-flex justify-content-between align-items-center px-5 border-0"
                        data-category-id="@category.Id">
                            @category.Name
                    </li>
                </a>
            }
        </ul>
    </div>
</div>

<div class="row">
    @foreach (var product in Model.ProductDtos)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row">
                <div class="col-12">
                    <div class="card border-0 p-3">
                        <div class="ratio ratio-16x9">
                            <img src="@product.ImagePath" class="card-img-top">
                        </div>
                        <div class="card-body">
                            <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.Name</p>
                            <p class="text-dark opacity-75 text-uppercase text-center">@product.UnitPrice.ToString("c")</p>
                            <a asp-controller="Home" asp-action="Details" asp-route-id="@product.Id" 
                                class="stretched-link">
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


  @section Scripts {
      <script>

        $(document).ready(function () {

            let href = $(location).attr("href");

            let url = new URL(href);

            let selectedCategoryId = url.pathname.slice(-1);
            
            $('.list-group-item').each(function () {
                $(this).removeClass("active");
                
                let thisCategoryId = $(this).attr('data-category-id');

                if ((thisCategoryId == "0" && selectedCategoryId == "/") || thisCategoryId == selectedCategoryId) {
                    $(this).addClass("active");
                }
            }); 
        });
      </script>
  }                              