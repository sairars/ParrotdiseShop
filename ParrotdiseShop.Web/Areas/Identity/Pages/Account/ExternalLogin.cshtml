@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Register";
}

<h1 class="pt-4 text-primary">@ViewData["Title"]</h1>
<h2 class="text-primary pb-4">Associate your @Model.ProviderDisplayName account</h2>


<p id="external-login-description" class="text-info">
    You've successfully authenticated with <strong>@Model.ProviderDisplayName</strong>.
    Please enter your information below and click the Register button to finish
    logging in.
</p>

<div class="row pt-4">
    <div class="col-md-6">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating py-2 col-12 gx-1">
                <input asp-for="Input.Email" class="form-control" autocomplete="email" />
                <label asp-for="Input.Email" class="mx-1 my-1"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-6 gx-1">
                <input asp-for="Input.Name" class="form-control" />
                <label asp-for="Input.Name" class="mx-1 my-1"></label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-6 gx-1">
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <label asp-for="Input.PhoneNumber" class="mx-1 my-1"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-6 gx-1">
                <input asp-for="Input.StreetAddress" class="form-control"/>
                <label asp-for="Input.StreetAddress" class="mx-1 my-1"></label>
                <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-6 gx-1">
                <input asp-for="Input.City" class="form-control" />
                <label asp-for="Input.City"></label>
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-6 gx-1">
                <select asp-for="Input.Province" asp-items="@Model.Input.Provinces" class="form-select">
                    <option selected></option>
                </select>
                <label asp-for="Input.Province" class="mx-1 my-1"></label>
                <span asp-validation-for="Input.Province" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-6 gx-1">
                <input asp-for="Input.PostalCode" class="form-control" />
                <label asp-for="Input.PostalCode"></label>
                <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary text-uppercase">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
