@model CategoryFormViewModel

@{
    ViewData["Title"] = Model.Heading;
}

<form method="post" asp-action="Save">
    @if (Model.IsEdit)
    {
        <input hidden asp-for="Category.Id" />
    }
    else
    {
        <input hidden asp-for="Category.Id" value="0" />
    }
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">@Model.Heading Category</h2>
            <hr />
        </div>
        <div class="mb-3 row">
            <label asp-for="Category.Name">Name</label>
            <input asp-for="Category.Name" class="form-control" />
            <span asp-validation-for="Category.Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row">
            <label asp-for="Category.DisplayOrder">Display Order</label>
            <input asp-for="Category.DisplayOrder" class="form-control" />
            <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                @if (Model.IsEdit)
                {  
                    <button type="submit" class="btn btn-primary form-control">Update</button>
                }
                else
                {
                    <button type="submit" class="btn btn-primary form-control">Create</button>
                }

            </div>
            <div class="col-6 col-md-3">
                <a class="btn btn-secondary border form-control" asp-controller="Categories" asp-action="Index">Go Back</a>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}