@{
    ViewData["Title"] = "Categories";
}

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Categories</h2>
        </div>
        <div class="col-6 text-end"><a asp-controller="Categories" asp-action="New" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create New Category</a></div>
    </div>
    <table class="table table-striped table-bordered" id="Categories">
        <thead>
            <tr>
                <th>Name</th>
                <th>Display Order</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/categories/categories.js"></script>
}